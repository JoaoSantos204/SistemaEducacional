@model IEnumerable<Academico.Models.Aluno>

@{
    ViewData["Title"] = "Index";
}

<h1>Principal</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cep)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AlunoID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.AlunoID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.AlunoID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
